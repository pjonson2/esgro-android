<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/activity_dispute_card"
    android:background="@drawable/layout_low_corner_radious"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dealID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/disputeDiscription"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/disputeDaysTxt"
        android:layout_toLeftOf="@+id/disputeDaysTxt"
        android:text="     "
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="invisible"
        app:fontFamily="@font/open_sans" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/userImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        app:placeholderImage="@drawable/roshen_kanishka"
         android:contentDescription="@null"
        app:layout_constraintHorizontal_bias="0.524"
         app:layout_constraintVertical_bias="0.061"
        app:roundAsCircle="true"
        app:roundingBorderColor="@color/lightGreen"
        app:roundingBorderPadding="4dp"
        app:roundingBorderWidth="1dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/disputeUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="12dp"
        android:text="Ben Stark"
        android:textColor="#393E46"
        android:textSize="14sp"
        app:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/disputeDiscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="89dp"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_toStartOf="@+id/disputeDaysTxt"
        android:layout_toLeftOf="@+id/disputeDaysTxt"
        android:text="Repair Fountain"
        android:textColor="#929AAB"
        android:textSize="14sp"
        app:fontFamily="@font/open_sans" />

    <TextView
        android:id="@+id/disputePriceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="$874.32"
        android:textColor="#393E46"
        android:textStyle="bold"
        app:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/disputeDaysTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="3 days left"
        android:textColor="#F47645"
        android:textSize="10sp"
        app:fontFamily="@font/open_sans" />
</RelativeLayout>