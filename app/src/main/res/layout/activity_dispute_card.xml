<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/disputeUserImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="29dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/despute_card"/>

    <TextView
        android:id="@+id/disputeUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="118dp"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="32dp"
        android:text="Ben Stark"
        android:textColor="#393E46"
        android:textSize="14sp"
        app:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/disputeDiscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="117dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_toStartOf="@+id/disputeDaysTxt"
        android:layout_toLeftOf="@+id/disputeDaysTxt"
        android:text="Repair Fountain "
        android:textColor="#929AAB"
        android:textSize="14sp"
        app:fontFamily="@font/open_sans" />

    <TextView
        android:id="@+id/disputePriceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:text="$874.32"
        android:textColor="#393E46"
        android:textStyle="bold"
        app:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/disputeDaysTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="3 days left"
        android:textColor="#F47645"
        android:textSize="10sp"
        app:fontFamily="@font/open_sans" />
</RelativeLayout>