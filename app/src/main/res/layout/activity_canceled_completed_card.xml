<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_canceled_completed_card"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/layout_gray_corner"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/userImg2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintVertical_bias="0.061"
        android:background="@drawable/default_pro_pic2x"
        app:roundAsCircle="true"
        app:roundingBorderColor="@color/lightGreen"
        app:roundingBorderPadding="4dp"
        app:roundingBorderWidth="1dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/idTxt"
        android:layout_width="197dp"
        android:layout_height="15dp"
        android:layout_alignStart="@+id/cancelledDescription"
        android:layout_alignLeft="@+id/cancelledDescription"
        android:layout_alignEnd="@+id/cancelledDescription"
        android:layout_alignRight="@+id/cancelledDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="3dp"
        android:text="       "
        android:textColor="#929AAB"
        android:textSize="14sp"
        android:visibility="invisible"
        app:fontFamily="@font/open_sans" />

    <TextView
        android:id="@+id/cancelledUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="12dp"
        android:text="Ben Stark"
        android:textColor="#393E46"
        android:textSize="14sp"
        app:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/cancelledDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="103dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:layout_toStartOf="@+id/disputeDaysTxt"
        android:layout_toLeftOf="@+id/disputeDaysTxt"
        android:text="Repair Fountain"
        android:textColor="#929AAB"
        android:textSize="14sp"
        app:fontFamily="@font/open_sans" />

    <TextView
        android:id="@+id/cancelledPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="$874.32"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        app:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/cancelledStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="Completed"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        app:fontFamily="@font/open_sans" />
</RelativeLayout>