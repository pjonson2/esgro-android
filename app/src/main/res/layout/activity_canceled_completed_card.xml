<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/activity_canceled_completed_card"
    android:background="@drawable/layout_gray_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/disputeDiscription"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="93dp"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:layout_marginBottom="3dp"
        android:text="    "
        android:textColor="#929AAB"
        android:textSize="14sp"
        app:fontFamily="@font/open_sans" />

    <TextView
        android:id="@+id/textView57"
        android:layout_width="301dp"
        android:layout_height="16dp"
        android:layout_alignTop="@+id/textView60"
        android:layout_alignBottom="@+id/textView60"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="2dp"
        android:layout_toStartOf="@+id/disputeDaysTxt"
        android:layout_toLeftOf="@+id/disputeDaysTxt"
        android:text="       "
        android:textColor="#929AAB"
        android:textSize="14sp"
        app:fontFamily="@font/open_sans" />

    <ImageView
        android:id="@+id/cancelledUserImge"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="9dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/despute_card" />

    <TextView
        android:id="@+id/cancelledUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="12dp"
        android:text="Ben Stark"
        android:textColor="#393E46"
        android:textSize="14sp"
        app:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/CancelledDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="103dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:layout_toStartOf="@+id/disputeDaysTxt"
        android:layout_toLeftOf="@+id/disputeDaysTxt"
        android:text="Repair Fountain"
        android:textColor="#929AAB"
        android:textSize="14sp"
        app:fontFamily="@font/open_sans" />

    <TextView
        android:id="@+id/cancelledPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="$874.32"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        app:fontFamily="@font/open_sans_semibold" />

    <TextView
        android:id="@+id/cancelledStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="Completed"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        app:fontFamily="@font/open_sans" />
</RelativeLayout>